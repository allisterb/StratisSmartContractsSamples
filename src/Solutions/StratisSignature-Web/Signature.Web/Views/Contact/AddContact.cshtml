@model Signature.Web.Models.ContactViewModel

@{
    ViewData["Title"] = "AddContact";
}

<div class="row align-items-center my-4">
    <div class="col-sm-6">
        <h2>Add Contact</h2>
    </div>
</div>
<div class="content">
    <div class="box contact-box">
        <form asp-controller="Contact" asp-action="AddContact" id="form1">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group required">
                            <input asp-for="FirstName" class="form-control" placeholder="First Name*" id="txtFName" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group required">
                            <input asp-for="LastName" class="form-control" placeholder="Last Name*" id="txtLName" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group required">
                            <input asp-for="Email" class="form-control" placeholder="Email*" id="txtEmail" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-9 col-sm-offset-3">
                        <button type="submit" class="btn btn-primary" id="btnSaveContact">Save</button>
                        <input type="button" class="btn btn-primary" onclick="window.location = '@Url.Action("Index", "Contact")'" value="Cancel" />
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>

