@model Signature.Web.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-12">
        <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <div class="col-md-4 mx-auto login-box mt-5">
                <div class="form-group">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WalletAddress"></label>
                    <input asp-for="WalletAddress" class="form-control" />
                    <span asp-validation-for="WalletAddress" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <button type="submit" class="btn btn-primary form-control">Register</button>
                </div>
                <div class="text-center">
                    <p class="mb-0">
                        <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">Login</a>
                    </p>
                </div>
            </div>
        </form>
    </div>
</div>