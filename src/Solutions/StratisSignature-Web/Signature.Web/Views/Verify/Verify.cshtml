@model Signature.Web.Models.VerifyViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="content">
    <div class="box detail-form">
        <form asp-controller="Verify" asp-action="Verify" method="post" enctype="multipart/form-data">
            <div class="box-body">
                <div class="row">
                    <div class="form-group required verify">
                        <label class="col-sm-12 control-label">Wallet Address</label>
                        <div class="col-sm-12">
                            @Html.TextBoxFor(m => m.SignerWalletAddress, new { @class = "form-control", @placeholder = "signer waller address" })
                            <span asp-validation-for="SignerWalletAddress" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group required file verify">
                        <label class="col-sm-3 control-label">File</label>
                        <div class="col-sm-9">
                            <input asp-for="File" type="file" accept=".pdf" />
                            <span asp-validation-for="File" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <div class="col-sm-9 col-sm-offset-3">
                            <button type="submit" id="btn_submit" class="btn btn-primary">Verify</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
